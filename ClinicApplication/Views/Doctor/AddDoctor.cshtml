@model ClinicApp.Models.Doctor
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Form to add doctor:</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            First name: @Html.TextBoxFor(m => m.FirstName)<br/>
            @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "text-danger" })<br/>
            Last name : @Html.TextBoxFor(m => m.LastName)<br/>
            @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "text-danger" })<br/>
            Telephone : @Html.TextBoxFor(m => m.Telephone)<br/>
            @Html.ValidationMessageFor(model => model.Telephone, null, new { @class = "text-danger" })<br/>
            <button type="submit" class="btn btn-success">Add doctor</button>
        </form>
    </div>
</div>